# API Directory Configuration
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-NOWPayments-Sig"
</IfModule>

# Security - Deny access to sensitive files
<Files ".env">
    Order deny,allow
    Deny from all
</Files>

<Files "*.log">
    Order deny,allow
    Deny from all
</Files>

# Protect webhook logs but allow PHP access
<Files "webhook.log">
    Order deny,allow
    Deny from all
</Files>

# PHP Configuration for file uploads
php_value upload_max_filesize 50M
php_value post_max_size 50M
php_value max_execution_time 300
php_value memory_limit 256M

# Enable error reporting for debugging (uncomment if needed)
# php_value display_errors On
# php_value error_reporting E_ALL

# Webhook-specific configurations
php_value max_input_time 60
php_value default_socket_timeout 60

# URL Rewriting for clean API endpoints
RewriteEngine On

# Handle webhook endpoints specifically
RewriteRule ^webhooks/nowpayments/?$ webhooks/nowpayments.php [L,QSA]
RewriteRule ^webhooks/([^/]+)/?$ webhooks/$1.php [L,QSA]

# Security headers for webhooks
<IfModule mod_headers.c>
    # Prevent caching of webhook responses
    <FilesMatch "webhooks/.*\.php$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>