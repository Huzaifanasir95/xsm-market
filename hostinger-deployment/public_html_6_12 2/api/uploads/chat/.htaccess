# Allow direct access to chat uploaded files
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Cache-Control "public, max-age=31536000"
</IfModule>

# Allow image and video files
<FilesMatch "\.(jpg|jpeg|png|gif|webp|mp4|avi|mov)$">
    Require all granted
</FilesMatch>
