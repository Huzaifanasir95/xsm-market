# Allow direct access to uploaded files
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Cache-Control "public, max-age=31536000"
</IfModule>

# Allow all file types in uploads
<FilesMatch "\.(jpg|jpeg|png|gif|webp|mp4|avi|mov|pdf|doc|docx)$">
    Require all granted
</FilesMatch>

# Disable script execution for security
<FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
    Order deny,allow
    Deny from all
</FilesMatch>
