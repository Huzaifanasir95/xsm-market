# Production Environment Configuration
PHP_ENV=production

# Database Configuration - Update with your Hostinger details
DB_HOST=localhost
DB_NAME=your_hostinger_db_name
DB_USER=your_hostinger_db_user
DB_PASS=your_hostinger_db_password
DB_PORT=3306

# JWT Configuration - Use a strong secret in production
JWT_SECRET=your-super-secret-jwt-key-for-production-change-this-to-a-random-32-char-string

# Email Configuration for Production
# Option 1: Use Hostinger's SMTP (Recommended)
SMTP_HOST=smtp.hostinger.com
SMTP_USERNAME=noreply@xsmmarket.com
SMTP_PASSWORD=your_email_password
SMTP_PORT=587
SMTP_SECURE=tls
FROM_EMAIL=noreply@xsmmarket.com
FROM_NAME=XSM Market

# Option 2: Use Gmail SMTP (Backup)
# SMTP_HOST=smtp.gmail.com
# SMTP_USERNAME=your_gmail@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_PORT=587
# SMTP_SECURE=tls
# FROM_EMAIL=your_gmail@gmail.com
# FROM_NAME=XSM Market

# Frontend URL for production
FRONTEND_URL=https://xsmmarket.com

# Server Configuration
PHP_SERVER_HOST=0.0.0.0
PHP_SERVER_PORT=80

# PayPal Configuration (same as local for now)
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# NowPayments Configuration
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret

# Google OAuth (if used)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Security Configuration
CORS_ORIGIN=https://xsmmarket.com
SESSION_SECURE=true
SESSION_HTTPONLY=true