# Hybrid Development/Production Environment Configuration
# This config works both locally and on live server

# Environment Mode - Change this based on deployment
PHP_ENV=development

# Database Configuration
DB_HOST=localhost
DB_NAME=xsm_market_local
DB_USER=root
DB_PASS=localpassword123
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration - Works in both dev and production
# Use real email settings that work in both environments
SMTP_HOST=smtp.gmail.com
SMTP_USERNAME=your_gmail@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_PORT=587
SMTP_SECURE=tls
FROM_EMAIL=your_gmail@gmail.com
FROM_NAME=XSM Market

# Alternative: Hostinger SMTP (uncomment for live server)
# SMTP_HOST=smtp.hostinger.com
# SMTP_USERNAME=noreply@xsmmarket.com
# SMTP_PASSWORD=your_hostinger_email_password
# SMTP_PORT=587
# SMTP_SECURE=tls
# FROM_EMAIL=noreply@xsmmarket.com
# FROM_NAME=XSM Market

# Frontend URL Configuration
# For development
FRONTEND_URL=http://localhost:5173
# For production (uncomment when deploying)
# FRONTEND_URL=https://xsmmarket.com

# Server Configuration
PHP_SERVER_HOST=localhost
PHP_SERVER_PORT=5000

# PayPal Configuration
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# NowPayments Configuration
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Development Settings
CORS_ORIGIN=*
SESSION_SECURE=false
SESSION_HTTPONLY=true

# Email Testing - Set to true to log emails to file instead of sending
EMAIL_DEBUG_MODE=false
EMAIL_FORCE_SEND=true